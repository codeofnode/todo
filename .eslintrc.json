{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended","airbnb"],
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
  },
  "rules": {
    "indent": [
      "error",
      2,
      {"SwitchCase": 1}
    ],
    "no-nested-ternary":"off",
    "no-underscore-dangle":[
      "error", { "allow" : [ "_id" ] }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
